# Codex CLI Configuration
# Managed by chezmoi

# Model settings
model = "gpt-5.1-codex-max"
model_reasoning_effort = "medium"

# Notification handler for agent-turn-complete events
notify = ["/Users/takish/.claude/hooks/codex-notify.sh"]

# TUI settings
[tui]
notifications = true

# Feature flags
[features]
web_search_request = true

# Notice
[notice]
"hide_gpt-5.1-codex-max_migration_prompt" = true

# Project trust levels
[projects."/Users/takish/Development/atlassuite/atlassuite-core"]
trust_level = "trusted"

[projects."/Users/takish/.codex"]
trust_level = "trusted"

[projects."/Users/takish/Development/atlassuite/survey-atlassuite"]
trust_level = "trusted"

[projects."/Users/takish/Development/atlassuite/salon-atlassuite"]
trust_level = "trusted"

[projects."/Users/takish/Development/atlassuite/salon-atlassuite_pos-app"]
trust_level = "trusted"

# MCP Servers

[mcp_servers.serena]
command = "uvx"
args = ["--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--context", "codex"]

[mcp_servers.context7]
command = "npx"
args = ["-y", "@upstash/context7-mcp@latest"]

[mcp_servers.chrome-devtools]
command = "npx"
args = ["chrome-devtools-mcp@latest"]

[mcp_servers.figma]
command = "npx"
args = ["-y", "mcp-remote", "http://127.0.0.1:3845/sse"]

[mcp_servers.firecrawl]
command = "npx"
args = ["-y", "firecrawl-mcp"]
env = { FIRECRAWL_API_KEY = "{{ env "FIRECRAWL_API_KEY" }}" }

[mcp_servers.note-post-mcp]
command = "npx"
args = ["@gonuts555/note-post-mcp@latest"]
env = { NOTE_POST_MCP_STATE_PATH = "{{ env "NOTE_POST_MCP_STATE_PATH" }}" }
