# --- tmux alias群 ---
alias tc='tmux new -As cursor'
alias tw='tmux new -As windsurf'
alias tv='tmux new -As vscode'
alias ti='tmux new -As iterm'
alias tls='tmux ls'  # セッション一覧
alias tkill='tmux kill-server'  # サーバー終了
alias tsr='tmux source-file ~/.tmux.conf'  # 設定再読込

tnew() {
  local name=$1
  if [ -z "$name" ]; then
    echo "Usage: tnew <name>"
    return 1
  fi
  tmux new -As "$name"
}
# --- end ---

